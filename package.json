{
  "name": "@cloudtasks/ngx-image",
  "description": "Allows you to serve highly optimized images to your Angular apps.",
  "author": "Jo√£o Ribeiro <jonnybgod@gmail.com> (http://github.com/JonnyBGod)",
  "version": "1.1.6",
  "devDependencies": {
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/compiler-cli": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@angular/router": "^5.2.9",
    "@types/core-js": "^0.9.46",
    "@types/jasmine": "^2.8.6",
    "@types/node": "^9.6.1",
    "awesome-typescript-loader": "^4.0.1",
    "codelyzer": "^4.2.1",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.1",
    "core-js": "^2.5.4",
    "cz-conventional-changelog": "^2.1.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-coveralls": "^1.1.2",
    "karma-jasmine": "^1.1.1",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "lint-staged": "^7.0.2",
    "ng-packagr": "^2.4.1",
    "prettier": "^1.11.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.1",
    "rxjs": "^5.5.8",
    "semantic-release": "^15.1.4",
    "source-map-loader": "^0.2.3",
    "systemjs": "^0.21.1",
    "ts-helpers": "^1.1.1",
    "tslint": "^5.9.1",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.8.1",
    "webpack": "^4.4.1",
    "zone.js": "^0.8.23"
  },
  "bugs": {
    "url": "http://github.com/Cloudtasks/ngx-image/issues"
  },
  "scripts": {
    "rimraf": "rimraf",
    "lint": "tslint ./src/{,*/}*.ts",
    "pretest": "npm run rimraf -- dist coverage",
    "test": "karma start",
    "test-watch": "karma start --singleRun=false --autoWatch=true",
    "clean": "npm cache clean && npm run rimraf -- node_modules dist coverage",
    "preclean:install": "npm run clean",
    "clean:install": "npm set progress=false && npm i",
    "commit": "git-cz",
    "prebuild": "npm run rimraf -- dist",
    "build": "ng-packagr -p ng-package.json",
    "semantic-release": "npm run build && semantic-release",
    "prettier": "prettier --write \"./src/**/*.ts\"",
    "precommit": "lint-staged"
  },
  "main": "dist/bundles/ngx-image.umd.js",
  "module": "dist/@cloudtasks/ngx-image.es5.js",
  "typings": "dist/ngx-image.d.ts",
  "es2015": "dist/@cloudtasks/ngx-image.js",
  "metadata": "dist/ngx-image.metadata.json",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cloudtasks/ngx-image.git"
  },
  "keywords": [
    "angular",
    "AngularJS",
    "cloudtasks",
    "image",
    "images",
    "processing",
    "image-processing",
    "optimisation",
    "image-optimisation"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=6.9.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist"
      },
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{ts,json}": ["prettier --write", "git add"]
  }
}
